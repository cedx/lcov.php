{
	"description": "Parse and format to LCOV your code coverage reports.",
	"homepage": "https://github.com/cedx/lcov.php",
	"license": "MIT",
	"name": "cedx/lcov",
	"type": "library",
	"version": "9.0.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"Lcov\\": "lib/"}
	},
	"autoload-dev": {
		"psr-4": {"Lcov\\": "test/"}
	},
	"config": {
		"optimize-autoloader": true,
		"platform-check": false
	},
	"funding": [
		{"type": "github", "url": "https://github.com/sponsors/cedx"}
	],
	"keywords": [
		"coverage",
		"formatter",
		"lcov",
		"parser",
		"test",
		"writer"
	],
	"require": {
		"php": ">=8.1.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"ext-spl": "*"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.7.15",
		"phpunit/phpunit": "^9.5.21"
	},
	"scripts": {
		"test": "phpunit --configuration=etc/phpunit.xml"
	},
	"support": {
		"docs": "https://github.com/cedx/lcov.php/wiki",
		"issues": "https://github.com/cedx/lcov.php/issues"
	}
}
