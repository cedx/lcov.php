{
  "description": "Parse and format LCOV coverage reports.",
  "homepage": "https://github.com/cedx/lcov.php",
  "license": "Apache-2.0",
  "name": "cedx/lcov",
  "type": "library",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"Lcov\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "coverage",
    "formatter",
    "lcov",
    "parser",
    "test"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-spl": "*"
  },
  "require-dev": {
    "apigen/apigen": "^5.0.0-RC4",
    "cedx/phpunit-expect": "^0.4.0",
    "phing/phing": "^2.16.0",
    "roave/better-reflection": "dev-master#a83ef24"
  },
  "scripts": {
    "coverage": "coveralls var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "issues": "https://github.com/cedx/lcov.php/issues"
  }
}
