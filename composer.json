{
	"description": "Parse and format to LCOV your code coverage reports.",
	"homepage": "https://docs.belin.io/lcov.php",
	"license": "MIT",
	"name": "cedx/lcov",
	"type": "library",
	"version": "10.0.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"lcov\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"lcov\\": "test/"}
	},
	"config": {
		"optimize-autoloader": true,
		"platform-check": false
	},
	"keywords": [
		"coverage",
		"formatter",
		"lcov",
		"parser",
		"test",
		"writer"
	],
	"require": {
		"php": ">=8.1.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"ext-spl": "*"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10.39",
		"phpunit/phpunit": "^10.4.2"
	},
	"scripts": {
		"clean": "@php scripts/clean.php",
		"doc": "@php scripts/doc.php",
		"lint": "phpstan analyse --configuration=etc/phpstan.neon --memory-limit=256M",
		"publish": "@php scripts/publish.php",
		"test": ["@putenv XDEBUG_MODE=coverage", "phpunit --configuration=etc/phpunit.xml"]
	},
	"support": {
		"docs": "https://docs.belin.io/lcov.php",
		"issues": "https://github.com/cedx/lcov.php/issues"
	}
}
