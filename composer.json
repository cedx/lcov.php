{
  "description": "Parse and format to LCOV your code coverage reports. The best way to share your code coverage stats.",
  "homepage": "https://docs.belin.io/lcov.php",
  "license": "MIT",
  "name": "cedx/lcov",
  "type": "library",
  "authors": [
    {"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
  ],
  "autoload": {
    "psr-4": {"Lcov\\": "src/"}
  },
  "autoload-dev": {
    "psr-4": {"Lcov\\": "test/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "funding": [
    {"type": "patreon", "url": "https://www.patreon.com/cedx"}
  ],
  "keywords": [
    "coverage",
    "formatter",
    "lcov",
    "parser",
    "test"
  ],
  "require": {
    "php": ">=7.4.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-spl": "*"
  },
  "require-dev": {
    "consolidation/robo": "^2.0.3",
    "phpstan/phpstan": "^0.12.23",
    "phpunit/phpunit": "^9.1.4"
  },
  "scripts": {
    "coverage": "coveralls var/coverage.xml",
    "test": "phpunit --configuration=etc/phpunit.xml"
  },
  "support": {
    "docs": "https://api.belin.io/lcov.php",
    "issues": "https://git.belin.io/cedx/lcov.php/issues"
  }
}
