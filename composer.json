{
	"abandoned": "cedx/lcov.hx",
	"description": "Parse and format to LCOV your code coverage reports. The best way to share your code coverage stats.",
	"homepage": "https://cedx.github.io/lcov.php",
	"license": "MIT",
	"name": "cedx/lcov",
	"type": "library",
	"version": "8.3.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"Lcov\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"Lcov\\": "test/"}
	},
	"config": {
		"optimize-autoloader": true
	},
	"funding": [
		{"type": "patreon", "url": "https://www.patreon.com/cedx"}
	],
	"keywords": [
		"coverage",
		"formatter",
		"lcov",
		"parser",
		"test"
	],
	"require": {
		"php": ">=7.4.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"ext-spl": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5.10"
	},
	"scripts": {
		"coverage": "composer global exec coveralls var/coverage.xml",
		"test": "phpunit --configuration=etc/phpunit.xml"
	},
	"support": {
		"docs": "https://bitbucket.org/cedx/lcov.php/wiki",
		"issues": "https://bitbucket.org/cedx/lcov.php/issues"
	}
}
