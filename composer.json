{
	"description": "Parse and format to LCOV your code coverage reports.",
	"homepage": "https://github.com/cedx/lcov.php",
	"license": "MIT",
	"name": "cedx/lcov",
	"type": "library",
	"version": "10.1.0",
	"authors": [
		{"email": "cedric@belin.io", "homepage": "https://belin.io", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"lcov\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"lcov\\": "test/"}
	},
	"config": {
		"platform-check": false
	},
	"keywords": [
		"coverage",
		"formatter",
		"lcov",
		"parser",
		"test",
		"writer"
	],
	"require": {
		"php": ">=8.1.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"ext-spl": "*"
	},
	"require-dev": {
		"phpstan/phpstan": "^1.10.65",
		"phpunit/phpunit": "^11.0.8"
	},
	"scripts": {
		"clean": "@php tool/clean.php",
		"doc": "@php tool/doc.php",
		"lint": "phpstan analyse --configuration=etc/phpstan.php --memory-limit=256M",
		"publish": "@php tool/publish.php",
		"test": "phpunit --configuration=etc/phpunit.xml"
	},
	"support": {
		"docs": "https://docs.belin.io/lcov.php",
		"issues": "https://github.com/cedx/lcov.php/issues"
	}
}
