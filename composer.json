{
  "description": "Parse and format to LCOV your code coverage reports. The best way to share your code coverage stats.",
  "homepage": "https://dev.belin.io/lcov.php",
  "license": "MIT",
  "name": "cedx/lcov",
  "type": "library",
  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"Lcov\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "coverage",
    "formatter",
    "lcov",
    "parser",
    "test"
  ],
  "require": {
    "php": ">=7.2.0",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-spl": "*"
  },
  "require-dev": {
    "cedx/phpunit-expect": "^0.5.0",
    "phing/phing": "^2.16.1"
  },
  "scripts": {
    "coverage": "coveralls var/coverage.xml",
    "test": "phpunit --colors=auto --verbose"
  },
  "support": {
    "docs": "https://dev.belin.io/lcov.php/api",
    "issues": "https://github.com/cedx/lcov.php/issues"
  }
}
