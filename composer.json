{
	"description": "Parse and format to LCOV your code coverage reports.",
	"homepage": "https://github.com/cedx/lcov.php",
	"license": "MIT",
	"name": "cedx/lcov",
	"type": "library",
	"version": "11.0.0",
	"authors": [
		{"email": "cedx@outlook.com", "homepage": "https://cedric-belin.fr", "name": "CÃ©dric Belin"}
	],
	"autoload": {
		"psr-4": {"Belin\\Lcov\\": "src/"}
	},
	"autoload-dev": {
		"psr-4": {"Belin\\Lcov\\": "test/"}
	},
	"config": {
		"platform-check": false
	},
	"keywords": [
		"coverage",
		"formatter",
		"lcov",
		"parser",
		"test",
		"writer"
	],
	"require": {
		"php": ">=8.5.0",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pcre": "*",
		"ext-spl": "*"
	},
	"require-dev": {
		"phpstan/phpstan": "^2.1.34",
		"phpunit/phpunit": "^12.5.6"
	},
	"support": {
		"docs": "https://github.com/cedx/lcov.php/wiki",
		"issues": "https://github.com/cedx/lcov.php/issues"
	}
}
