{
  "description": "Parse and format LCOV coverage reports.",
  "homepage": "https://github.com/cedx/lcov.php",
  "name": "cedx/lcov",

  "license": "Apache-2.0",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "type": "library",

  "authors": [{
    "email": "cedric@belin.io",
    "name": "CÃ©dric Belin"
  }],
  "autoload": {
    "psr-4": {"lcov\\": "lib/"}
  },
  "config": {
    "optimize-autoloader": true
  },
  "keywords": [
    "coverage",
    "formatter",
    "lcov",
    "parser",
    "test"
  ],
  "require": {
    "php": ">=7.0.0",
    "ext-mbstring": "*",
    "ext-pcre": "*",
    "ext-spl": "*",
    "cedx/enum": "^1.3.0"
  },
  "require-dev": {
    "phing/phing": "^2.16.0",
    "phpdocumentor/phpdocumentor": "^2.9.0",
    "phpunit/phpunit": "^6.0.7"
  },
  "scripts": {
    "coverage": "coveralls --file=var/coverage.xml",
    "test": "phpunit"
  },
  "support": {
    "issues": "https://github.com/cedx/lcov.php/issues"
  }
}
