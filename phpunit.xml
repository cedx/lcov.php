<?xml version="1.0"?>
<phpunit bootstrap="vendor/autoload.php">
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">lib</directory>
    </whitelist>
  </filter>

  <logging>
    <log type="coverage-clover" target="var/coverage.xml"/>
  </logging>

  <testsuites>
    <testsuite name="all">
      <directory>test</directory>
    </testsuite>
  </testsuites>
</phpunit>
